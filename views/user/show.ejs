<% include ../partials/header %>

<div class="container">
    <div class="user">
        <div class="user__image-container">
            <img src="https://imgplaceholder.com/400x400/ff7f7f/333333/fa-image" class="user__image"/>
        </div>
        <h3><%=user.username%></h3>
        <form action="/user/<%=user._id%>/photo" method="POST">
            <input id="user-photo" class="user__upload" type="file" onchange="form.submit()"/>
            <label for="user-photo" class="btn btn--primary">Choose Photo</label>
        </form>
    </div>
    <div class="list-container">
        <h2>Watched Films</h2>
        <div class="films-list">
            <% watched.forEach(film => { %>
                <div class="card card--basic">
                    <img class="card--basic__poster" src="<%=film.poster%>"/>
                    <div class="card--basic__content">
                        <div>
                            <h4><%= film.title %></h4>
                            <h6><%= film.year %></h6>
                        </div>
                        <a class="btn" href="/films/<%=film.imdbID%>"><i class="fa fa-search btn__icon"></i></a>
                    </div>
                </div>
            <% }) %>
        </div>

        <h2>Want-To-See</h2>
        <div class="films-list">
            <% want.forEach(film => { %>
                <div class="card card--basic">
                    <img class="card--basic__poster" src="<%=film.poster%>"/>
                    <div class="card--basic__content">
                        <div>
                            <h4><%= film.title %></h4>
                            <h6><%= film.year %></h6>
                        </div>
                        <a class="btn" href="/films/<%=film.imdbID%>"><i class="fa fa-search btn__icon"></i></a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    
</div>

<% include ../partials/footer %>