<% include ../partials/header %>

<div class="container container--centre">

	<h1>Change Password</h1>

	<form class="form" method="POST" action="/user/<%=userID%>/password">
		<div class="form__group">
			<input name="oldPassword" type="password" placeholder="Old Password" class="form__text">
		</div>

		<div class="form__group">
			<input name="newPassword" type="password" placeholder="New Password" class="form__text">
		</div>
		<div class="form__group">
			<button class="btn btn--primary">Change Password</button>

		</div>
		
	</form>

</div>

<% include ../partials/footer %>