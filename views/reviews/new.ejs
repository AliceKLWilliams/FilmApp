<% include ../partials/header %>

<div class="container container--centre">
    <h2>Add Review</h2>
    <h3>Film Name</h3>

    <form class="form" method="POST" action="/films/<%=filmID %>/reviews">
        <label class="form__label">
            Review
            <textarea class="form__textarea" name="review"></textarea>
        </label>
        
        <label class="form__label">Overall
            <div class="form__review">
                <input type="radio" name="overall" value="5" id="review5">
                <label for="review5"> 
                    <i class="fa fa-star form__star"></i>
                </label>
                
                <input type="radio" name="overall" value="4" id="review4">
                <label for="review4"> 
                    <i class="fa fa-star form__star"></i>
                </label>

                <input type="radio" name="overall" value="3" id="review3">
                <label for="review3"> 
                    <i class="fa fa-star form__star"></i>
                </label>

                <input type="radio" name="overall" value="2" id="review2">
                <label for="review2"> 
                    <i class="fa fa-star form__star"></i>
                </label>

                <input type="radio" name="overall" value="1" id="review1">
                <label for="review1"> 
                    <i class="fa fa-star form__star"></i>
                </label>
		    </div>

        </label>
		
        
        <input class="form__btn" type="submit">
    </form>
</div>

<% include ../partials/footer %>