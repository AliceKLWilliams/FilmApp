<% include ../partials/header %>

<div class="container container--centre">
    <h2>Add Review</h2>
    <h3><%=filmData.Title%></h3>

    <form class="form" method="POST" action="/films/<%=filmID %>/reviews">
        <label class="form__label">
            Review
            <textarea class="form__textarea" name="review"></textarea>
        </label>
        
        <h3>Overall</h3>
            <div class="form__review">  

                <input type="radio" name="overall" value="5" id="overall5">
                <label for="overall5"><i class="fa fa-star form__star"></i></label>             
               
                <input type="radio" name="overall" value="4" id="overall4">
                <label for="overall4"><i class="fa fa-star form__star"></i></label>

                <input type="radio" name="overall" value="3" id="overall3">
                <label for="overall3"><i class="fa fa-star form__star"></i></label>
                 
                <input type="radio" name="overall" value="2" id="overall2">
                <label for="overall2"><i class="fa fa-star form__star"></i></label>

                <input type="radio" name="overall" value="1" id="overall1">
                <label for="overall1"><i class="fa fa-star form__star"></i></label>
		    </div>
        <input class="form__btn" type="submit">
    </form>
</div>

<% include ../partials/footer %>